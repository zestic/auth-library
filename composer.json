{
    "name": "zestic/auth-library",
    "description": "Classes and utils for auth",
    "license": "Apache-2.0",
    "type": "library",
    "homepage": "https://github.com/zestic/auth-library",
    "support": {
        "issues": "https://github.com/zestic/auth-library/issues",
        "source": "https://github.com/zestic/auth-library"
    },
    "require": {
        "php": "^8.3",
        "nesbot/carbon": "^3.11",
        "ramsey/uuid": "^4.9"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "friendsofphp/php-cs-fixer": "^3.86",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.0",
        "robmorgan/phinx": "^0.16.10"
    },
    "autoload": {
        "psr-4": {
            "Zestic\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zestic\\Auth\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "composer-normalize": "composer normalize --dry-run",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "cs-fix:dry-run": "php-cs-fixer fix --dry-run --diff",
        "phpstan": "phpstan analyse",
        "phpstan:baseline": "phpstan analyse --generate-baseline",
        "quality": [
            "@phpstan",
            "@cs-check"
        ],
        "quality:fix": [
            "@phpstan",
            "@cs-fix"
        ],
        "security-audit": "composer audit",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage/html",
        "test:coverage-text": "phpunit --coverage-text",
        "test:integration": "phpunit --testsuite=Integration",
        "test:unit": "phpunit --testsuite=Unit"
    }
}
